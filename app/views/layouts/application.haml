!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "EDS"
    %meta{name: 'description', content: "#{content_for?(:description) ? yield(:description) : 'EDS'}"}
    %link{href: 'http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic&subset=latin,vietnamese'.html_safe, rel: 'stylesheet', type: 'text/css'}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = yield :styles
    =csrf_meta_tags
  %body
    %main{id: "application"}
      = yield
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = yield :scripts